{
  "compilerOptions": {
    "declaration": true,
    "outDir": "build",
    "target": "ES5",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "downlevelIteration":true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "newLine": "LF",
    "lib":["dom"],
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ]
}