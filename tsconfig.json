{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "rootDir": ".",
    "lib": ["es2017", "dom"],
    "paths": {
      "@v-regexp": ["./src"],
      "@v-regexp/*": ["./src/*"],
    },
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": ".ts-out",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts",
    "site/**/*.tsx",
    "site/**/*.ts",
  ],
  "exclude": ["node_modules"],
  "compileOnSave": false
}